<UserControl x:Class="TitleSoftT.View.UserControls.PictureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TitleSoftT.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="300">
    <Grid  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"  Grid.Column="0" Source="{Binding SelectItem.ImageSource}"  Name="ImageO" Width="250" Height="160"></Image>
        <!--<CheckBox Grid.Row="1"   Grid.Column="0" Name="CheckBoxPic" Width="100" Height="20">选择</CheckBox>-->
    </Grid>
</UserControl>
